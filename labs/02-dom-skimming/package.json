{
  "name": "dom-skimming-lab",
  "version": "1.0.0",
  "description": "DOM-based skimming attack laboratory for security research and ML training",
  "main": "malicious-code/c2-server.js",
  "scripts": {
    "start": "node malicious-code/c2-server.js",
    "dev": "nodemon malicious-code/c2-server.js",
    "serve": "python3 -m http.server 8080 --directory vulnerable-site",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:dom-monitor": "playwright test test/tests/dom-monitor.spec.js",
    "test:form-overlay": "playwright test test/tests/form-overlay.spec.js",
    "test:shadow-skimmer": "playwright test test/tests/shadow-skimmer.spec.js",
    "clean": "rm -rf malicious-code/stolen-data/* malicious-code/analysis/*",
    "demo": "concurrently \"npm run serve\" \"npm run start\" \"npm run test:headed\"",
    "setup": "npm install && npx playwright install"
  },
  "keywords": [
    "security",
    "skimming",
    "dom",
    "malware",
    "education",
    "research",
    "ml-training"
  ],
  "author": "E-Skimming Labs",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/example/e-skimming-labs.git"
  },
  "bugs": {
    "url": "https://github.com/example/e-skimming-labs/issues"
  },
  "homepage": "https://github.com/example/e-skimming-labs#readme"
}
